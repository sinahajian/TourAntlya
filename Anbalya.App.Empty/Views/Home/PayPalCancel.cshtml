@model PayPalResultViewModel
@using System.Globalization

@{
    var reservation = Model.Reservation;
    var tour = Model.Tour;
    ViewData["Title"] = string.IsNullOrWhiteSpace(Model.Title) ? "Payment Cancelled" : Model.Title;
    var amountText = Model.Amount > 0
        ? $"{Model.Amount.ToString("F2", CultureInfo.InvariantCulture)} {Model.Currency}"
        : null;
}

<section class="section_gap">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <span class="badge badge-warning p-2">Payment not completed</span>
                        </div>
                        <h2 class="mb-2">Payment cancelled</h2>
                        <p class="mb-2">You left the PayPal checkout before finishing the payment.</p>
                        @if (!string.IsNullOrWhiteSpace(Model.Invoice))
                        {
                            <p class="mb-0">Reference we received: <strong>@Model.Invoice</strong></p>
                        }
                        @if (!string.IsNullOrWhiteSpace(amountText))
                        {
                            <small class="d-block text-muted">Pending amount: @amountText</small>
                        }
                    </div>
                </div>

                @if (reservation is not null)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4 class="card-title">Reservation status</h4>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Tour</dt>
                                <dd class="col-sm-8">@(tour?.TourName ?? reservation.TourName)</dd>

                                <dt class="col-sm-4">Reservation ID</dt>
                                <dd class="col-sm-8">TA-@reservation.Id.ToString("D6")</dd>

                                <dt class="col-sm-4">Payment status</dt>
                                <dd class="col-sm-8">@reservation.PaymentStatus.ToString()</dd>

                                <dt class="col-sm-4">Guests</dt>
                                <dd class="col-sm-8">Adults @reservation.Adults · Children @reservation.Children · Infants @reservation.Infants</dd>
                            </dl>
                        </div>
                    </div>
                }

                <div class="alert alert-light mb-4">
                    <p class="mb-1">If you still want to secure your spots, return to your reservation confirmation email and use the PayPal button again, or contact us at <a href="mailto:info@tourantalya.com">info@tourantalya.com</a>.</p>
                    <p class="mb-0">We keep your reservation as <strong>pending</strong> until payment is received.</p>
                </div>

                <div class="text-center">
                    @if (tour is not null)
                    {
                        <a href="@Url.Action("Tour", "Home", new { id = tour.Id, slug = tour.Slug })" class="btn theme_btn button_hover mr-2">Try again</a>
                    }
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Back to home</a>
                </div>
            </div>
        </div>
    </div>
</section>
