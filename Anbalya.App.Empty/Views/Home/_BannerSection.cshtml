@model LandingContentDto
@using Models.Helper

@{
    var language = LanguageCatalog.Normalize(Model.Language);
    var isRtl = LanguageCatalog.IsRtl(language);
    var alignClass = isRtl ? "text-right text-lg-right" : "text-center";
    var backgroundUrl = string.IsNullOrWhiteSpace(Model.BackgroundImage)
        ? null
        : Url.Content(Model.BackgroundImage);
    var backgroundStyleAttribute = backgroundUrl is null
        ? string.Empty
        : $" style=\"background-image:url('{backgroundUrl}')\"";
}

<section class="banner_area" dir="@(isRtl ? "rtl" : "ltr")">
    <div class="booking_table d_flex align-items-center"@Html.Raw(backgroundStyleAttribute)>
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content @alignClass">
                <h6>@Model.Tagline</h6>
                <h2>@Model.Title</h2>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</section>
