@model ManagerDashboardViewModel
@using Models.Entities

@functions {
    public string PaymentBadgeClass(PaymentStatus status) => status switch
    {
        PaymentStatus.Paid => "badge badge-success",
        PaymentStatus.Pending => "badge badge-warning",
        PaymentStatus.Failed => "badge badge-danger",
        PaymentStatus.Refunded => "badge badge-info",
        _ => "badge badge-secondary"
    };

    public string ReservationBadgeClass(ReservationStatus status) => status switch
    {
        ReservationStatus.Confirmed => "badge badge-success",
        ReservationStatus.Pending => "badge badge-warning",
        ReservationStatus.Cancelled => "badge badge-secondary",
        _ => "badge badge-light"
    };
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
        <div class="text-muted small">Latest bookings and payment activity</div>
    </div>

    <div class="row">
        @foreach (var card in Model.SummaryCards)
        {
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card @card.BorderCss shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold @card.AccentClass text-uppercase mb-1">
                                    @card.Title
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@card.Value</div>
                            </div>
                            <div class="col-auto">
                                <i class="@card.IconCss"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Recent reservations</h6>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Reservations" asp-route-userName="@Model.Manager.UserName">View all</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-sm table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th style="width: 12%;">Created</th>
                                    <th style="width: 26%;">Tour</th>
                                    <th style="width: 26%;">Guest</th>
                                    <th style="width: 20%;">Payment</th>
                                    <th class="text-right" style="width: 12%;">Total (€)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.RecentReservations.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted py-4">No reservations yet.</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var reservation in Model.RecentReservations)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <div>@reservation.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd")</div>
                                                <small class="text-muted">@reservation.CreatedAt.ToLocalTime().ToString("HH:mm")</small>
                                            </td>
                                            <td class="align-middle">
                                                <strong>@reservation.TourName</strong>
                                                <div class="small text-muted">Ref: @(reservation.PaymentReference ?? $"TA-{reservation.Id:D6}")</div>
                                            </td>
                                            <td class="align-middle">
                                                <div>@reservation.FullName</div>
                                                <div class="small text-muted">@reservation.CustomerEmail</div>
                                                @if (!string.IsNullOrWhiteSpace(reservation.CustomerPhone))
                                                {
                                                    <div class="small text-muted">@reservation.CustomerPhone</div>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                <div class="@PaymentBadgeClass(reservation.PaymentStatus) mr-1">@reservation.PaymentStatus</div>
                                                <div class="@ReservationBadgeClass(reservation.Status)">@reservation.Status</div>
                                            </td>
                                            <td class="align-middle text-right">
                                                <strong>@reservation.TotalPrice.ToString("N0")</strong>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Status overview</h6>
                    <span class="badge badge-light">Total: @Model.Summary.Total</span>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-3">
                        <li class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fa fa-clock-o text-warning mr-2"></i>Pending payment</span>
                            <strong>@Model.Summary.Pending</strong>
                        </li>
                        <li class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fa fa-check-circle text-success mr-2"></i>Paid & confirmed</span>
                            <strong>@Model.Summary.Paid</strong>
                        </li>
                        <li class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fa fa-flag text-info mr-2"></i>Confirmed</span>
                            <strong>@Model.Summary.Confirmed</strong>
                        </li>
                        <li class="d-flex justify-content-between align-items-center mb-2">
                            <span><i class="fa fa-times-circle text-danger mr-2"></i>Cancelled / failed</span>
                            <strong>@(Model.Summary.Cancelled + Model.Summary.Failed)</strong>
                        </li>
                    </ul>
                    <div class="border rounded p-3 bg-light">
                        <div class="text-muted small">Paid revenue</div>
                        <div class="h4 mb-0">€@Model.Summary.TotalRevenue.ToString("N0")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
