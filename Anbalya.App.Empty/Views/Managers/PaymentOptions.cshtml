@model PaymentOptionsViewModel
@{
    Layout = "_ManagerLayout";
    ViewData["Title"] = "Payment Settings";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Payment Settings</h1>
    <p class="text-muted mb-0">Update the checkout instructions that appear on the public booking form.</p>
</div>

@if (!string.IsNullOrWhiteSpace(Model.FeedbackMessage))
{
    <div class="alert alert-success">@Model.FeedbackMessage</div>
}

<form asp-action="PaymentOptions" method="post" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" name="UserName" value="@Model.UserName" />

    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th style="width: 12%;">Method</th>
                        <th style="width: 18%;">Label</th>
                        <th style="width: 20%;">Account / Destination</th>
                        <th>Instructions</th>
                        <th style="width: 8%;" class="text-center">Enabled</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Options.Count; i++)
                    {
                        <tr>
                            <td class="align-middle">
                                <input type="hidden" asp-for="Options[@i].Method" />
                                <strong>@Model.Options[i].Method</strong>
                            </td>
                            <td>
                                <input asp-for="Options[@i].DisplayName" class="form-control" />
                                <span asp-validation-for="Options[@i].DisplayName" class="text-danger small"></span>
                            </td>
                            <td>
                                <input asp-for="Options[@i].AccountIdentifier" class="form-control" placeholder="e.g. paypal@example.com" />
                                <span asp-validation-for="Options[@i].AccountIdentifier" class="text-danger small"></span>
                            </td>
                            <td>
                                <textarea asp-for="Options[@i].Instructions" class="form-control" rows="3" placeholder="How should guests complete this payment?"></textarea>
                                <span asp-validation-for="Options[@i].Instructions" class="text-danger small"></span>
                            </td>
                            <td class="text-center align-middle">
                                <div class="custom-control custom-switch d-inline-block">
                                    <input asp-for="Options[@i].IsEnabled" class="custom-control-input" id="enabled-@i" />
                                    <label class="custom-control-label" for="enabled-@i"></label>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-right">
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
